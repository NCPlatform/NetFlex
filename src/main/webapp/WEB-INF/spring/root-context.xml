<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<context:component-scan base-package="admin.service" />
	<context:component-scan base-package="admin.dao" />
	
	<context:component-scan base-package="admin.video.service"/>
	<context:component-scan base-package="admin.video.dao"/>
	
	<context:component-scan base-package="account.service" />
	<context:component-scan base-package="account.dao" />
	
	<context:component-scan base-package="user.service" />
	<context:component-scan base-package="user.dao" />
	
	<context:component-scan base-package="admin.video.bean"/>
	<context:component-scan base-package="user.bean" />
		
	<context:component-scan base-package="spring" />
	<context:component-scan base-package="spring.conf" />

</beans>
